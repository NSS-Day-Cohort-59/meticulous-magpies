@model TabloidMVC.Models.ViewModels.PostByUserViewModel

@{
    ViewData["Title"] = "Index";
}


<div class="container pt-5">
    <h1>Posts</h1>

    <p>
        <a class="btn btn-primary" asp-action="Create">New Post</a>
    </p>
    <form asp-action="UsersPosts">
        <label asp-for="UserProfiles" class="control-label"></label>
        <select asp-for="UserProfiles" class="form-control">
            @foreach (var user in Model.UserProfiles)
            {
                <option value="@user.Id">@user.FirstName</option>
            }
        </select>
        <div class="form-group">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>
    <form asp-action="CategoryPosts">
        <label asp-for="Categories" class="control-label"></label>
        <select asp-for="Categories" class="form-control">
            @foreach (var category in Model.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <div class="form-group">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>
    <form asp-action="PostsByTag">
        <label asp-for="Tags" class="control-label"></label>
        <select asp-for="Tags" class="form-control">
            @foreach (var tag in Model.Tags)
            {
                <option value="@tag.Id">@tag.Name</option>
            }
        </select>
        <div class="form-group">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    UserProfileId
                </th>
                <th>
                    Category
                </th>
                <th>
                    PublishDateTime
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model.Post)
            {
                <tr>
                    <td>
                        @post.Title
                    </td>
                    <td>
                        @post.UserProfile.FirstName
                    </td>
                    <td>
                        @post.Category.Name
                    </td>
                    <td>
                        @post.PublishDateTime
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-outline-primary mx-1" title="View">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-outline-primary mx-1" title="Edit">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@post.Id" class="btn btn-outline-primary mx-1" title="Delete">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>